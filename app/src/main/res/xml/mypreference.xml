<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:key="DEFAULT_COLOR"
        android:title="@string/default_color"
        android:summary="@string/default_color_summary">
       <intent
           android:action="com.example.kjming.note7.CHOOSE_COLOR"
           android:targetPackage="com.example.kjming.note7"
           android:targetClass="com.example.kjming.note7.ColorActivity"/>
    </Preference>

    <ListPreference
        android:key="NOTIFY_MINUTES"
        android:title="@string/default_notify"
        android:summary="@string/default_notify_summary"
        android:entries="@array/notify_minutes_array"
        android:entryValues="@array/notify_minutes_value_arry"
        android:defaultValue="5"/>


</PreferenceScreen>